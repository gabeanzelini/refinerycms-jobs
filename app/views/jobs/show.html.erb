<% content_for :body_content_title do %>
  <%= @job.job_title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h1><%= @job.job_title %></h1>
  </div>
  
  <div>
    <h2>Description</h2>
    <%= @job.description.html_safe %>
  </div>
  <% unless @job.employment_terms.blank?%>
  <div>
    <h2 style='display:inline'>Employment Terms:</h2>  <%= @job.employment_terms.html_safe %>
  </div>
  <%end%>  
  <% unless @job.hours.blank?%>
  <br>
  <div>
    <h2 style='display:inline'>Hours:</h2>
    <%= @job.hours.html_safe %>
  </div>
  <%end%>  

<% end %>

<% content_for :body_content_right do %>
  <% if @jobs.length > 1 %>
    <h2>Other Jobs</h2>
    <ul id="jobs">
      <% @jobs.each do |job| %>
        <% if @job != job %>
          <li>
            <%= link_to job.job_title, jobs_url(job) %>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= render :partial => "/shared/content_page" %>
