<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search", :locals => {:url => admin_jobs_url} %>
    </li>
    <li>
      <%= link_to "Create New Job", new_admin_job_url, :class => "add_icon" %>
    </li>
  </ul>
</div>
<div id='records'>
  <% if searching? %>
    <h2>Search Results for "<%= params[:search] %>"</h2>
    <% if @jobs.any? %>
      <%= render :partial => "jobs", :collection => @jobs %>
    <% else %>
      <p>Sorry, no results found.</p>
    <% end %>
  <% else %>
    <% if @jobs.any? %>
      <%= will_paginate @jobs, :previous_label => '&laquo;', :next_label => '&raquo;' %>
      <%= will_paginate @jobs, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% else %>
      <p>
        <strong>
          There are no jobs yet.
          Click "Create New Job" to add your first jobs.
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
