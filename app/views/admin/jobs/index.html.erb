<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search", :locals => {:url => admin_jobs_url} %>
    </li>
    <li>
      <%= link_to "Create New Job", new_admin_job_url, :class => "add_icon" %>
    </li>
  </ul>
</div>

<div id='records'>
  <% if searching? %>
    <h2>Search Results for "<%= params[:search] %>"</h2>
  <% end %>
  <% if @jobs.any? %>
    <%= will_paginate @news_items %>
    <ul>
      <%= render :partial => "news_item", :collection => @news_items %>
    </ul>
    <%= will_paginate @news_items %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          There are no jobs yet.
          Click "Create New Job" to add your first jobs.
        </strong>
      <% else %>
        <%= t('shared.admin.search.no_results') %>
      <% end %>
    </p>
  <% end %>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
  <% end %>
</div>
